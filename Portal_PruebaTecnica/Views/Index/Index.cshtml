@model  Portal_PruebaTecnica.Models.RootObject
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form action="/Index/Index" method="get">
    @using (Html.BeginForm())
    {
    <div class="row">
        <div class="col-lg-3 col-md-12 col-sm-12 mb-4">
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 mb-4">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h5>Prueba API</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class=" form-group">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.alpha3Code, new { @class = "form-control" })
                            <div class="input-group-btn">
                                <button id="btnBuscar" type="submit" class="form-control" formaction="/Index/Buscar">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="card-body p-0 pb-3 text-center">
                       @if (Model != null)
                        {<table class="table mb-0">
                                <thead class="table-dark">
                                <th scope="col">Código ISO</th>
                                <th scope="col">País</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.alpha3Code </td>
                                        <td>@Model.name </td>
                                    </tr>
                                </tbody>
                            </table>
                    }
                        </div>

                    </div>

                </div>

            </div>


        </div>
        <div class="col-lg-3 col-md-12 col-sm-12 mb-4">
        </div>
    </div>
        }
</form>