@model Portal_PruebaTecnica.Models.clsCadena
@{
    ViewBag.Title = "Cadena";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<form action="/Cadena/Cadena" method="get">
    @using (Html.BeginForm())
    {
    <div class="row">
        <div class="col-lg-3 col-md-12 col-sm-12 mb-4">
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 mb-4">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h5>Prueba Cadenas</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class=" form-group">
                        <input id="btnCadena" type="submit" class="form-control" value="Cadena" formaction="/Cadena/Cadena" />
                    </div>
                    @if (Model != null)
                {
                    <div class="form-group">
                        <label>

                            @(new HtmlString(HttpUtility.HtmlDecode((Model.strIteracion))))
                        </label>

                        <br />
                    </div>
            }

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-12 col-sm-12 mb-4">
        </div>
    </div>
    }
</form>


